<% content_for(:title) do %>
  Foodlog <%= DateTime.now.to_s(:nice_date) %>
<% end  %>

<div class="columns mt-6 is-centered">
  <% @entries.each do |entry| %>      
    <div class="column is-one-quarter">
      <div class="card">

        <header class="card-header">
          <p class="card-header-title"><%= entry.meal_type %></p>
          <% link_to edit_entry_path(entry), class: "card-header-icon" do %>          
            <span class="icon">
              <i class="fas fa-angle-down" aria-hidden="true"></i>
            </span>
          <% end %>
        </header>

        <div class="card-content">
          <div class="content">

            <p><span class="has-text-weight-bold">Calories:</span> <%= entry.calories %></p>
            <p><span class="has-text-weight-bold">Protein:</span> <%= entry.proteins %></p>
            <p><span class="has-text-weight-bold">Carbohydrates:</span> <%= entry.carbohydrates %></p>
            <p><span class="has-text-weight-bold">Fats:</span> <%= entry.fats %></p>

            <p class="italic">Logged <%= time_ago_in_words(entry.created_at)%> ago.</p>
          </div>
        </div>

        <div class="card-footer">
          <%= link_to 'Show', entry , class: "card-footer-item"%>
          <%= link_to 'Edit', edit_entry_path(entry) , class: "card-footer-item"%>
          <%= link_to 'Destroy', entry, method: :delete, data: { confirm: 'Are you sure?' } , class: "card-footer-item"%>   
        </div>
      </div>
    </div>  
    
   
       
  <% end %>
</div>
    
 